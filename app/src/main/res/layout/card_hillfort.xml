<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="8dp"
  android:elevation="24dp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
            android:id="@+id/image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp" android:contentDescription="image"/>

    <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image"
            android:textSize="30sp" android:text="empty"
            android:layout_marginStart="8dp" android:layout_marginTop="4dp"
            android:layout_below="@+id/hillfortAddedBy"/>

    <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image" android:text="empty" android:layout_marginTop="4dp"
            android:layout_below="@+id/name" android:layout_toEndOf="@+id/image" android:layout_marginStart="8dp"/>
    <TextView
            android:id="@+id/hillfortAddedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image" android:text="empty"
            android:layout_marginTop="4dp" android:layout_alignParentTop="true" android:layout_toEndOf="@+id/image"
            android:layout_marginStart="8dp" android:textSize="10sp"/>

  </RelativeLayout>
</androidx.cardview.widget.CardView>